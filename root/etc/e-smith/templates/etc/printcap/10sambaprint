{
my $sambafax=$hylafax{'SambaFax'} || 'disabled';
my $name=$hylafax{'SambaFaxName'} || 'SambaFax';
if($sambafax eq 'enabled')
{
$OUT.= <<HERE
#--------------------------------------------------
# printcap entry sambafax printer
#
sambafax\|$name:\\
  :lp=/dev/null:\\
  :sd=/var/spool/lpd/sambafax:\\
  :if=/usr/local/bin/salsafax:\\
  :sh:ff_separator:bkf:mx#0:
#--------------------------------------------------
HERE
}
}


